<div style="overflow:auto; height: 500px; width:690px">
<table cellpadding="0" cellspacing="0" style="width:1500px;">
<tr>

<h1>Search results</h1>
<%= will_paginate(@posts) %>
<table>
  <tr>
    <th>Vehicle</th>
    <th>Make</th>
    <th>Model</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.vehicle %></td>
    <td><%= post.make %></td>
    <td><%= post.model %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


