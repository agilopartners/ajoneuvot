<% @windows.each do |window| %>
  <tr>
    <td><%= window.name %></td>
    <td><%= window.car_id %></td>
    <td><%= window.sub_car_id %></td>
    <td><%= link_to 'Show', window %></td>
    <td><%= link_to 'Edit', edit_window_path(window) %></td>
    <td><%= link_to 'Destroy', window, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

