<h1>Listing sub_types</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sub_types.each do |sub_type| %>
  <tr>
    <td><%= sub_type.name %></td>
    <td><%= sub_type.type_id %></td>
    <td><%= link_to 'Show', sub_type %></td>
    <td><%= link_to 'Edit', edit_sub_type_path(sub_type) %></td>
    <td><%= link_to 'Destroy', sub_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

